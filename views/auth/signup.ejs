<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-12">
    <div class="max-w-lg mx-auto">
      <!-- Header Section -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Create Account</h1>
        <p class="text-gray-600">Join us and start your journey today</p>
      </div>

      <!-- Form Card -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
        <form action="/signup" method="POST" class="space-y-6">
          
          <!-- Name Fields Row -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">

            <%- include('../partials/error', { errorMessages: errorMessages }) %>
            <div class="relative">
              <label class="block text-sm font-semibold text-gray-700 mb-2">First Name</label>
              <input
                type="text"
                name="firstname"
                placeholder="John"
                value="<%= oldInput.firstname ? oldInput.firstname : '' %>"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500/20 transition duration-200 placeholder-gray-400"
                required
              />
            </div>
            <div class="relative">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Last Name</label>
              <input
                type="text"
                name="lastname"
                placeholder="Doe"
                value="<%= oldInput.lastname ? oldInput.lastname : '' %>"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500/20 transition duration-200 placeholder-gray-400"
              />
            </div>
          </div>

          <!-- Email Field -->
          <div class="relative">
            <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                </svg>
              </div>
              <input
                type="email"
                name="email"
                placeholder="john.doe@example.com"
                value="<%= oldInput.email ? oldInput.email : '' %>"
                class="w-full pl-10 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500/20 transition duration-200 placeholder-gray-400"
                required
              />
            </div>
          </div>

          <!-- Password Fields -->
          <div class="space-y-4">
            <div class="relative">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                  </svg>
                </div>
                <input
                  type="password"
                  name="password"
                  placeholder="Create a strong password"
                  class="w-full pl-10 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500/20 transition duration-200 placeholder-gray-400"
                  required
                />
              </div>
            </div>

            <div class="relative">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Confirm Password</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <input
                  type="password"
                  name="confirmpassword"
                  placeholder="Confirm your password"
                  class="w-full pl-10 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500/20 transition duration-200 placeholder-gray-400"
                  required
                />
              </div>
            </div>
          </div>

          <!-- User Type Selection -->
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="block text-sm font-semibold text-gray-700 mb-3">Account Type</label>
            <div class="space-y-2">
              <label class="flex items-center p-3 border-2 border-gray-200 rounded-lg cursor-pointer hover:bg-white hover:border-red-300 transition duration-200">
                <input type="radio" name="userType" value="guest" class="w-4 h-4 text-red-500 border-gray-300 focus:ring-red-500" <%= oldInput.userType === 'guest' ? 'checked' : '' %> />
                <div class="ml-3">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <span class="font-medium text-gray-800">Guest</span>
                  </div>
                  <p class="text-sm text-gray-600 ml-7">Book and enjoy experiences</p>
                </div>
              </label>
              
              <label class="flex items-center p-3 border-2 border-gray-200 rounded-lg cursor-pointer hover:bg-white hover:border-red-300 transition duration-200">
                <input type="radio" name="userType" value="host" class="w-4 h-4 text-red-500 border-gray-300 focus:ring-red-500" <%= oldInput.userType === 'host' ? 'checked' : '' %> />
                <div class="ml-3">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span class="font-medium text-gray-800">Host</span>
                  </div>
                  <p class="text-sm text-gray-600 ml-7">Share your space and earn money</p>
                </div>
              </label>
            </div>
          </div>

          <!-- Terms and Conditions -->
          <div class="flex items-start space-x-3">
            <input 
              type="checkbox" 
              name="terms" 
              id="terms" 
              class="w-5 h-5 text-red-500 border-2 border-gray-300 rounded focus:ring-red-500 mt-0.5" 
              required 
            />
            <label for="terms" class="text-sm text-gray-600 leading-relaxed">
              I agree to the <a href="#" class="text-red-500 hover:text-red-600 font-medium underline">Terms of Service</a> and <a href="#" class="text-red-500 hover:text-red-600 font-medium underline">Privacy Policy</a>
            </label>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white font-semibold py-4 rounded-lg hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-4 focus:ring-red-500/30 transform hover:scale-[1.02] transition duration-200 shadow-lg hover:shadow-xl"
          >
            Create Account
          </button>

        </form>

        <!-- Footer -->
        <div class="mt-8 pt-6 border-t border-gray-100 text-center">
          <p class="text-gray-600">
            Already have an account? 
            <a href="/login" class="text-red-500 hover:text-red-600 font-semibold underline ml-1">Login in here</a>
          </p>
        </div>
      </div>
    </div>
  </main>
</body>
</html>